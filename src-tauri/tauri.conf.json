{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Limbo Voice",
  "version": "1.0.0",
  "identifier": "com.limbo.voice",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Limbo Voice",
        "width": 900,
        "height": 650,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "transparent": false,
        "alwaysOnTop": false,
        "skipTaskbar": false,
        "visible": true,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": [
      "nsis",
      "msi"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "publisher": "Limbo Voice",
    "copyright": "Copyright Â© 2026 Limbo Voice Contributors",
    "category": "Productivity",
    "shortDescription": "Universal voice dictation for Windows",
    "longDescription": "Limbo Voice is a free, privacy-first voice dictation tool that works across every Windows application. Press Alt+Space anywhere to start dictating.",
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "",
      "wix": {
        "language": [
          "en-US"
        ]
      },
      "nsis": {
        "installerIcon": "icons/icon.ico",
        "installMode": "currentUser",
        "languages": [
          "English"
        ],
        "displayLanguageSelector": false,
        "compression": "lzma"
      }
    }
  }
}